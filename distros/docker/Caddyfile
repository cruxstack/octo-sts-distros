{
	admin off
}

http://{$STS_DOMAIN} {
	# GitHub webhook endpoint
	handle /webhook* {
		reverse_proxy app:8080
	}

	# App installer routes (when enabled)
	handle /setup* {
		reverse_proxy app:8080
	}

	# GitHub App manifest callback (redirects to /callback after app creation)
	handle /callback* {
		reverse_proxy app:8080
	}

	# Health check
	handle /healthz {
		reverse_proxy app:8080
	}

	# STS token exchange (default)
	handle {
		reverse_proxy sts:8080
	}

	log {
		output stdout
		format console
	}
}
